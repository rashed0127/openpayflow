# Environment Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openpayflow

# Redis
REDIS_URL=redis://localhost:6379

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=openpayflow-api

# Security
API_KEY_SALT=openpayflow-salt-change-in-production

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# Webhook Settings
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_MAX_RETRIES=10

# Gateway Configuration
# Set to true to enable each gateway (requires credentials below)
ENABLE_STRIPE=false
ENABLE_RAZORPAY=false
ENABLE_MOCK=true

# Stripe (Test Mode Only)
# Get test keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here

# Razorpay (Test Mode Only)
# Get test keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Feature Flags
ENABLE_GRAPHQL=true

# Logging
LOG_LEVEL=info

# Mock Gateway Settings (for testing)
MOCK_GATEWAY_SUCCESS_RATE=0.9
MOCK_GATEWAY_AVERAGE_LATENCY_MS=500
MOCK_GATEWAY_ENABLE_CHAOS=false
MOCK_GATEWAY_CHAOS_RATE=0.1
