{
  "name": "@openpayflow/worker",
  "version": "0.1.0",
  "description": "OpenPayFlow background worker",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openpayflow/common": "workspace:*",
    "@openpayflow/gateway-core": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.204.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "@prisma/client": "^6.15.0",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.11",
    "jest": "^29.7.0",
    "prisma": "^6.15.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "prisma": "^6.15.0",
      "@prisma/client": "^6.15.0"
    }
  }
}
